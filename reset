#!/usr/bin/env python3
"""
yourl.cloud Reset Utility
Session ID: f1d78acb-de07-46e0-bfa7-f5b75e3c0c49
"""

import os
import sys
import shutil
from datetime import datetime

def main():
    print("yourl.cloud - Reset Utility")
    print("===========================")
    print(f"Session ID: f1d78acb-de07-46e0-bfa7-f5b75e3c0c49")
    print(f"Timestamp: {datetime.utcnow().isoformat()}Z")
    print()
    
    print("Resetting yourl.cloud to clean state...")
    print()
    
    # Clear cache directories
    cache_dirs = ['.cache', '__pycache__', '.pytest_cache']
    for cache_dir in cache_dirs:
        if os.path.exists(cache_dir):
            print(f"Clearing {cache_dir}...")
            shutil.rmtree(cache_dir, ignore_errors=True)
    
    # Check git status if .git exists
    if os.path.exists('.git'):
        print("Checking git status...")
        os.system('git status --porcelain')
        print()
    
    # Show essential files
    essential_files = ['index.html', 'README.md', 'reset.sh', 'reset.bat', 'reset', 'status']
    print("Essential files status:")
    for file in essential_files:
        status = "✓ EXISTS" if os.path.exists(file) else "✗ MISSING"
        print(f"  {file}: {status}")
    
    print()
    print("Reset complete. Maintained files:")
    print("- index.html")
    print("- README.md")
    print("- reset.sh")
    print("- reset.bat") 
    print("- reset")
    print("- status")
    print()
    print("Repository: https://github.com/XDM-ZSBW/yourl.cloud")

if __name__ == "__main__":
    main()
